@page "/portscan"
@using Maui.Serial
@using System.Text


<h1>PortScan</h1>

@if (portNames is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Port Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var portName in portNames)
            {
                <tr>
                    <td>@portName</td>
                    <td><button class="btn btn-primary" @onclick="() => Connect(portName)">Connect</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string[] portNames;

    protected override void OnInitialized()
    {

        portNames = SerialPortManager.GetPortNames().ToArray();

    }

    private void Connect(string portName)
    {
        using var port = SerialPortManager.GetPort(portName);

        port.Open();
        port.WriteLine("M115");
        var sb = new StringBuilder();

        while (true)
        {
            var line = port.ReadLine();
            if (!string.IsNullOrEmpty(line))
            {
                sb.AppendLine(line);
            }
            else
            {
                break;
            }
        }

        var result = sb.ToString();
        Console.WriteLine(result);
    }
}
